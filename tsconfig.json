{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["chrome", "node"],
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "manifest.json"],
  "exclude": ["node_modules", "dist"]
}
